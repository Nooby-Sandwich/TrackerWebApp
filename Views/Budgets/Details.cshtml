@model TrackerWebApp.Models.Budget

@{
    ViewData["Title"] = "Budget Details";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Limit</dt>
    <dd class="col-sm-10">@Model.Limit.ToString("C")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.BudgetId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
