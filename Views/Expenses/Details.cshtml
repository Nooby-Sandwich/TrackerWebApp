@model TrackerWebApp.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Budget</dt>
    <dd class="col-sm-10">@Model.Budget?.Name</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ExpenseId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
