@model TrackerWebApp.Models.DashboardViewModel
@using TrackerWebApp.Models
@using System.Text.Json
@{
    ViewData["Title"] = "Finance Dashboard";
    // Extract totals safely
    var totals = Model.Totals ?? new FinancialTotals();
}

<div class="container-fluid px-4">
    <!-- Header -->
    <header class="d-flex flex-wrap justify-content-between align-items-center py-4 mb-4 border-bottom">
        <div class="d-flex align-items-center">
            <i class="bi bi-pie-chart-fill fs-1 text-primary me-3"></i>
            <div>
                <h1 class="h2 mb-0">Financial Dashboard</h1>
                <p class="text-muted mb-0">Track and manage your finances in real-time</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#setupModal">
                <i class="bi bi-percent me-2"></i>Budget Setup
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newChartModal">
                <i class="bi bi-plus-circle me-2"></i>New Visualization
            </button>
        </div>
    </header>

    <!-- Key Metrics -->
    <section class="row g-4 mb-5">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card metric-card bg-primary text-white shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="h5 mb-1">Total Budgeted</h2>
                            <p class="display-6 mb-0">@totals.TotalBudgeted.ToString("C")</p>
                        </div>
                        <i class="bi bi-coin fs-1 opacity-25"></i>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-primary">
                            <i class="bi bi-arrow-up me-1"></i>
                            @(totals.TotalBudgeted - totals.TotalSpent).ToString("C") remaining
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card metric-card bg-success text-white shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="h5 mb-1">Total Spent</h2>
                            <p class="display-6 mb-0">@totals.TotalSpent.ToString("C")</p>
                        </div>
                        <i class="bi bi-currency-dollar fs-1 opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card metric-card bg-info text-white shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="h5 mb-1">Budgets Created</h2>
                            <p class="display-6 mb-0">@totals.TotalBudgets</p>
                        </div>
                        <i class="bi bi-bar-chart-line fs-1 opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card metric-card bg-warning text-white shadow-lg">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="h5 mb-1">Expenses Logged</h2>
                            <p class="display-6 mb-0">@totals.TotalExpenses</p>
                        </div>
                        <i class="bi bi-receipt fs-1 opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions -->
    <section class="row g-4 mb-5">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="h5 card-title mb-4">Record Expense</nody>)</h3>
                    <form asp-controller="Expenses" asp-action="Create" method="post" class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Description</label>
                            <input name="Description" class="form-control" placeholder="Dinner with clients" required />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Budget Category</label>
                            <select name="BudgetId" class="form-select" required>
                                @foreach (var b in (List<Budget>)ViewBag.BudgetsList)
                                {
                                    <option value="@b.BudgetId">@b.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input name="Amount" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Date</label>
                            <input name="Date" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-2"></i>Add Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="h5 card-title mb-4">Create Budget</h3>
                    <form asp-controller="Budgets" asp-action="Create" method="post" class="row g-3">
                        <div class="col-12 col-md-8">
                            <label class="form-label">Category Name</label>
                            <input name="Name" class="form-control" placeholder="Marketing" required />
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">Monthly Limit</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input name="Limit" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i>Create Budget
                            </button>
                        </div>
                    </form>
                    <hr class="my-4" />
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Pro tip: Use specific category names for better tracking
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Visualization Section -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="h4">Financial Analysis</h3>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Filter">
                    <i class="bi bi-funnel"></i>
                </button>
                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Export">
                    <i class="bi bi-download"></i>
                </button>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-xl-2 g-4" id="chartContainer">
            <!-- Dynamic charts will be inserted here -->
            <div class="col">
                <div class="card placeholder-card border-dashed">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-bar-chart fs-1 text-muted mb-3"></i>
                        <h4 class="h5">No visualizations created</h4>
                        <p class="text-muted mb-4">Get started by creating your first financial chart</p>
                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newChartModal">
                            Create Visualization
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Enhanced Setup Modal -->
<div class="modal fade" id="setupModal" tabindex="-1" aria-labelledby="setupModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Setup" method="post">
                <div class="modal-header">
                    <h2 class="h5 modal-title" id="setupModalLabel">Budget Configuration</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @if (TempData.ContainsKey("SetupError"))
                    {
                        <div class="alert alert-danger d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@TempData["SetupError"]</div>
                        </div>
                    }
                    <div class="mb-4">
                        <label class="form-label">Monthly Income</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input name="Salary" type="number" step="0.01" class="form-control form-control-lg" placeholder="5000.00" required />
                        </div>
                        <small class="form-text text-muted">Before taxes and deductions</small>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Budget Strategy</label>
                        <select name="Preset" class="form-select">
                            <option value="Default">Balanced (50/30/20)</option>
                            <option value="High-Savings">Aggressive Savings (40/30/30)</option>
                            <option value="Travel">Travel Focus (45/35/20)</option>
                        </select>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Strategies define allocation between needs, wants, and savings
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-link text-muted" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Apply Strategy</button>
                </div>
            </form>
        </div>
    </div>
</div>
