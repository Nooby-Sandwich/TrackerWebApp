@model TrackerWebApp.Models.DashboardViewModel
@using TrackerWebApp.Models

@{
    ViewData["Title"] = "Finance Dashboard";
    var totals = Model.Totals ?? new FinancialTotals();
    var budgets = ViewBag.Budgets as List<Budget> ?? new List<Budget>();
}

<div class="container-fluid px-4">

    <header class="d-flex justify-content-between align-items-center py-4 mb-4 border-bottom">
        <div class="d-flex align-items-center">
            <i class="bi bi-pie-chart-fill fs-1 text-primary me-3"></i>
            <div>
                <h1 class="h2 mb-0">Financial Dashboard</h1>
                <p class="text-muted mb-0">Track and manage your finances in real-time</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#setupModal">
                <i class="bi bi-percent me-2"></i> Budget Setup
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newChartModal">
                <i class="bi bi-plus-circle me-2"></i> New Visualization
            </button>
        </div>
    </header>

    <!-- Metrics Section -->
    <section class="row g-4 mb-5">
        <partial name="_MetricCard" model='new MetricCardModel("Total Budgeted", "bi-coin", totals.TotalBudgeted.ToString("C"), (totals.TotalBudgeted - totals.TotalSpent).ToString("C") + " remaining", "bg-primary")' />
        <partial name="_MetricCard" model='new MetricCardModel("Total Spent", "bi-currency-dollar", totals.TotalSpent.ToString("C"), "Spending this month", "bg-danger")' />
        <partial name="_MetricCard" model='new MetricCardModel("Budgets Created", "bi-bar-chart-line", totals.TotalBudgets.ToString(), "Active budget categories", "bg-info")' />
        <partial name="_MetricCard" model='new MetricCardModel("Expenses Logged", "bi-receipt", totals.TotalExpenses.ToString(), "Tracked individual expenses", "bg-warning")' />

    </section>

    <!-- Quick Actions -->
    <section class="row g-4 mb-5">
        <!-- Record Expense -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="h5 card-title mb-4">Record Expense</h3>
                    <form asp-controller="Expenses" asp-action="Create" method="post" class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Description</label>
                            <input name="Description" class="form-control" placeholder="Dinner with clients" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Budget Category</label>
                            <select name="BudgetId" class="form-select" required>
                                @foreach (var b in budgets)
                                {
                                    <option value="@b.BudgetId">@b.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input name="Amount" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date</label>
                            <input name="Date" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle me-2"></i> Add Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Create Budget -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="h5 card-title mb-4">Create Budget</h3>
                    <form asp-controller="Budgets" asp-action="Create" method="post" class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Category Name</label>
                            <input name="Name" class="form-control" placeholder="Marketing" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Monthly Limit</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input name="Limit" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i> Create Budget
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
