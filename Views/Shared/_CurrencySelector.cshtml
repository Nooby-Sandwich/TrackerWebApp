@inject TrackerWebApp.Services.ICurrencyService CurrencyService
@{
    var currencies = await CurrencyService.GetAllCurrenciesAsync();
}
<form asp-action="SetCurrency" method="post" class="d-flex align-items-center">
    <select name="currency" class="form-select form-select-sm me-2" onchange="this.form.submit()">
        @foreach (var c in currencies)
        {
            <option value="@c.Code" selected="@(c.Code == ViewBag.SelectedCurrency)">@c.Code - @c.Name</option>
        }
    </select>
    <noscript><button type="submit" class="btn btn-sm btn-primary">Set</button></noscript>
</form>