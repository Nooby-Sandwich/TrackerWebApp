<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"

] – Budget Tracker</title>

    <!-- Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-YSZxI9xhXgaSRNNNpRFGsZfOf16ks+g1zK4E3s6M2/lgmF4vC+NJYI3zZjvFfqpZ" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #4a90e2;
            --secondary-color: #6c757d;
            --success-color: #28a745;
            --danger-color: #dc3545;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .main-content {
            min-height: calc(100vh - 120px);
            padding: 2rem 0;
        }

        .stat-card {
            transition: transform 0.2s;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        }

            .stat-card:hover {
                transform: translateY(-3px);
            }

        .theme-switcher {
            cursor: pointer;
            opacity: 0.8;
            transition: opacity 0.2s;
        }

            .theme-switcher:hover {
                opacity: 1;
            }

        footer {
            background: rgba(0, 0, 0, 0.03);
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-xl">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-wallet2 me-2"></i>
                Budget Tracker
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Budgets" ? "active" : "")"
                           asp-controller="Budgets" asp-action="Index">
                            <i class="bi bi-piggy-bank me-1"></i>Budgets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Expenses" ? "active" : "")"
                           asp-controller="Expenses" asp-action="Index">
                            <i class="bi bi-receipt me-1"></i>Expenses
                        </a>
                    </li>
                </ul>

                <!-- User Section -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <div class="theme-switcher nav-link" onclick="toggleTheme()">
                            <i class="bi bi-moon-stars"></i>
                        </div>
                    </li>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-xl">
            <div class="row g-4">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="py-4 mt-auto">
        <div class="container-xl text-center text-muted">
            <div class="d-flex flex-wrap justify-content-center gap-3 mb-2">
                <a href="#" class="text-muted text-decoration-none">About</a>
                <a href="#" class="text-muted text-decoration-none">Privacy</a>
                <a href="#" class="text-muted text-decoration-none">Terms</a>
                <a href="#" class="text-muted text-decoration-none">Support</a>
            </div>
            <div>&copy; @DateTime.Now.Year Budget Tracker. All rights reserved.</div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script>
        // Theme toggler
        function toggleTheme() {
            const htmlEl = document.documentElement;
            const currentTheme = htmlEl.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            htmlEl.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);

            // Update theme switcher icon
            const themeIcon = document.querySelector('.theme-switcher i');
            themeIcon.className = newTheme === 'dark' ? 'bi bi-sun' : 'bi bi-moon-stars';
        }

        // Initialize theme
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);
        document.querySelector('.theme-switcher i').className =
            savedTheme === 'dark' ? 'bi bi-sun' : 'bi bi-moon-stars';
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>