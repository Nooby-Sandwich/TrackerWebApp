@model TrackerWebApp.Models.TravelViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Currency Exchange";
}

<h1 class="mb-4">Currency Exchange</h1>

<form asp-controller="Travel" asp-action="Index" method="post" class="row g-3 mb-5">
    <div class="col-md-4">
        <label asp-for="FromCurrency" class="form-label">From</label>
        <select asp-for="FromCurrency"
                asp-items="@(new SelectList(Model.Currencies, "Code", "Code"))"
                class="form-select">
            <option value="">-- choose --</option>
        </select>
    </div>

    <div class="col-md-4">
        <label asp-for="ToCurrency" class="form-label">To</label>
        <select asp-for="ToCurrency"
                asp-items="@(new SelectList(Model.Currencies, "Code", "Code"))"
                class="form-select">
            <option value="">-- choose --</option>
        </select>
    </div>

    <div class="col-md-4">
        <label asp-for="Amount" class="form-label">Amount</label>
        <input asp-for="Amount" class="form-control" placeholder="Numeric value" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Convert</button>
    </div>
</form>

@if (Model.ConvertedAmount.HasValue)
{
        <div class="alert alert-success mt-3">
            <strong>Result:</strong> @Model.ConvertedAmount.Value.ToString("N2") @Model.ToCurrency
        </div>
}
